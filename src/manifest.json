{
  "name": "FACEIT Enhancer",
  "description": "Enhances the FACEIT experience and adds useful features",
  "version": "0.9.0",
  "manifest_version": 2,
  "homepage_url": "http://steamcommunity.com/groups/faceitenhancer",
  "minimum_chrome_version": "51",
  "applications": {
    "gecko": {
      "id": "{e6fc2bbd-183e-4518-9ea5-04a8a913ab00}",
      "strict_min_version": "48.0"
    }
  },
  "permissions": [
    "storage",
    "https://api.faceit.com/",
    "https://cdn.faceit.com/"
  ],
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.faceit.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
